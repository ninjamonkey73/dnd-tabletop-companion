{
  "name": "dnd-tabletop-companion",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production --localize",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "move-en": "move .\\en-US\\* .\\ && rmdir .\\en-US",
    "deploy": "npm run build:prod && npm run fix-baseref-en && git checkout gh-pages && npx rimraf ./browser && npx cpy-cli \"dist/dnd-tabletop-companion/browser/**\" . && npm run move-en && git add . && git commit -m 'Deploy' && git push origin gh-pages && git checkout main",
    "open": "ng serve --open",
    "extract-i18n": "ng extract-i18n --output-path=src/locale",
    "localize": "ng build --localize",
    "fix-baseref-en": "npx replace-in-file \"<base href=\\\"/en-US/\\\"\" \"<base href=\\\"/dnd-tabletop-companion/\\\"\" dist/dnd-tabletop-companion/browser/en-US/index.html"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^19.2.9",
    "@angular/common": "^20.3.12",
    "@angular/compiler": "^20.3.12",
    "@angular/core": "^20.3.12",
    "@angular/forms": "^20.3.12",
    "@angular/material": "^19.2.9",
    "@angular/platform-browser": "^20.3.12",
    "@angular/platform-browser-dynamic": "^20.3.12",
    "@angular/router": "^20.3.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^13.0.0",
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.12",
    "@angular/localize": "^20.3.12",
    "@types/jest": "^30.0.0",
    "cpy": "^11.1.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.0",
    "replace-in-file": "^8.3.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "~5.9.3"
  }
}